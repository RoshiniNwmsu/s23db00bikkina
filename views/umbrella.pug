extends layout

block content
  h1= title
  - let items = results
  - let destination1 = `dispatch(\"/umbrella/create\")`
  button.btn( class="btn-primary ml-1", onclick= destination1) Create
  div(claass="container-fluid mt-3")
   div(class="row m-1")
    each item,index in items
     - let destination = `dispatch(\"/umbrella/update?id=${item._id}\")`
     - let destination2 = `dispatch(\"/umbrella/detail?id=${item._id}\")`
     - let destination3 = `dispatch(\"/umbrella/delete?id=${item._id}\")`
     div(class="col-sm-3 bg-info m-2 p-4" onclick=`buy(${index})`) #{item.umbrella_type} - #{item.size } - #{item.cost}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      button.btn( class="btn-primary ml-1", onclick= destination2) Detail
      button.btn( class="btn-primary ml-1", onclick= destination3) Delete
  script.
   function buy(itemNo)
   {
     alert(`You purchased Item ${itemNo+1}`)
   }
   function dispatch(path)
   {
     window.location.href=path
   }